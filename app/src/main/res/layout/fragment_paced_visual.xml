<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container_layout">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/label"
        android:layout_above="@+id/progress_bar"
        android:text="Starting Activity in"
        android:gravity="center"
        android:textColor="#000"/>
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/progress_bar_bg"
        android:indeterminate="false"
        android:max="500"
        android:progressDrawable="@drawable/progress_bar_blue"
        android:rotation="-90"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="5"
        android:textSize="20dp"
        android:id="@+id/timer_view"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        android:id="@+id/random_number_label"
        android:text="Add this Digit to the previous one"
        android:gravity="center"
        android:textColor="#000"
        />
    <ProgressBar
        android:id="@+id/random_number_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="500"
        android:visibility="gone"

        android:layout_below="@id/random_number_label"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/random_number_progress"
        android:id="@+id/random_number"
        android:gravity="center"

        android:text="2"
        android:visibility="gone"
        android:textSize="30dp"
        android:textColor="#000"
        />

</RelativeLayout>