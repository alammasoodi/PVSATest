<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container_layout">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/label"
        android:layout_above="@+id/progress_bar"
        android:text="Starting Activity in"
        android:gravity="center"
        android:textColor="#000"/>
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="@drawable/progress_bar_bg"
        android:indeterminate="false"
        android:max="500"
        android:progressDrawable="@drawable/progress_bar_blue"
        android:rotation="-90"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="5"
        android:textSize="20dp"
        android:id="@+id/timer_view"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        android:id="@+id/random_number_label"
        android:text="Add this Digit to the previous one"
        android:gravity="center"
        android:textColor="#000"
        />
    <ProgressBar
        android:id="@+id/random_number_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="500"
        android:visibility="gone"

        android:layout_below="@id/random_number_label"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/random_number_progress"
        android:id="@+id/random_number"
        android:gravity="center"
        android:text="2"
        android:visibility="gone"
        android:textSize="30dp"
        android:textColor="#000"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/result_layout"
        android:visibility="gone"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sum_layout_1"
        android:layout_above="@id/sum_layout_2"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        >
        <Button
            android:id="@+id/button1"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="3"
            android:textColor="@color/buttonColor"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_drawable"/>
        <Button
            android:id="@+id/button2"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="4"
            android:textColor="@color/buttonColor"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/button1"
            android:background="@drawable/button_drawable"/>
        <Button
            android:id="@+id/button3"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="5"
            android:textColor="@color/buttonColor"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/button2"
            android:background="@drawable/button_drawable"/>
        <Button
            android:id="@+id/button4"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="6"
            android:textColor="@color/buttonColor"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/button3"
            android:background="@drawable/button_drawable"/>
        <Button
            android:id="@+id/button5"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="7"
            android:textColor="@color/buttonColor"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/button4"
            android:background="@drawable/button_drawable"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sum_layout_2"
        android:layout_above="@id/sum_layout_3"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        >
        <Button
            android:id="@+id/button6"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="8"
            android:textColor="@color/buttonColor"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_drawable"/>
        <Button
            android:id="@+id/button7"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="9"
            android:textColor="@color/buttonColor"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/button6"
            android:background="@drawable/button_drawable"/>
        <Button
            android:id="@+id/button8"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="10"
            android:textColor="@color/buttonColor"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/button7"
            android:background="@drawable/button_drawable"/>
        <Button
            android:id="@+id/button9"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="11"
            android:textColor="@color/buttonColor"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/button8"
            android:background="@drawable/button_drawable"/>
        <Button
            android:id="@+id/button10"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="12"
            android:textColor="@color/buttonColor"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/button9"
            android:background="@drawable/button_drawable"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sum_layout_3"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        >
        <Button
            android:id="@+id/button11"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="13"
            android:textColor="@color/buttonColor"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_drawable"/>
        <Button
            android:id="@+id/button12"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="14"
            android:textColor="@color/buttonColor"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/button11"
            android:background="@drawable/button_drawable"/>
        <Button
            android:id="@+id/button13"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="15"
            android:textColor="@color/buttonColor"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/button12"
            android:background="@drawable/button_drawable"/>
        <Button
            android:id="@+id/button14"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="16"
            android:textColor="@color/buttonColor"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/button13"
            android:background="@drawable/button_drawable"/>
        <Button
            android:id="@+id/button15"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="17"
            android:textColor="@color/buttonColor"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/button14"
            android:background="@drawable/button_drawable"/>
    </RelativeLayout>
    </LinearLayout>


</RelativeLayout>